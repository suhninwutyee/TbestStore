@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
     // or your custom admin layout
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        $(document).ready(function () {
            
        });
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial")
}

@if (ViewBag.Message != null)
{
    <div class="alert alert-success">@ViewBag.Message</div>
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-4 shadow" style="background-color: #121212; border-color: #444">
        <h2 class="text-center mb-4 text-white">Change Password</h2>

        <form asp-action="ChangePassword" method="post">
            <div class="mb-3 row">
                <label asp-for="CurrentPassword" class="col-sm-4 col-form-label text-gray-500">Current Password</label>
                <div class="col-sm-8">
                    <input asp-for="CurrentPassword" class="form-control bg-dark text-gray-100 border-secondary" id="CurrentPassword" />
                    <span asp-validation-for="CurrentPassword" class="text-danger mt-1 d-block"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="NewPassword" class="col-sm-4 col-form-label text-gray-500">New Password</label>
                <div class="col-sm-8">
                    <input asp-for="NewPassword" class="form-control bg-dark text-gray-100 border-secondary" id="NewPassword" />
                    <span asp-validation-for="NewPassword" class="text-danger mt-1 d-block"></span>
                </div>
            </div>

            <div class="mb-3 row">
                <label asp-for="ConfirmPassword" class="col-sm-4 col-form-label text-gray-500">Confirm Password</label>
                <div class="col-sm-8">
                    <input asp-for="ConfirmPassword" class="form-control bg-dark text-gray-100 border-secondary" id="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger mt-1 d-block"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-4 d-grid">
                    <button type="submit" class="btn btn-primary">
                        Change Password
                    </button>
                </div>
                <div class="col-sm-4 d-grid">
                    <a class="btn btn-outline-primary" asp-controller="Dashboard" asp-action="Index" role="button">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
