@model MVCtesting.Models.BrandCreateViewModel

@{
    ViewData["Title"] = "Create Brand";
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-4 shadow" style="background-color: #121212; border-color: #444">
        <h2 class="text-center mb-4 text-white">Create Brand</h2>

        <form asp-action="Create" method="post" novalidate>
            <div class="row mb-3">
                <label class="col-sm-4 col-form-label">Category</label>
                <div class="col-sm-8">
                    @Html.DropDownListFor(m => m.Id,
                             ViewBag.CategoryList as List<SelectListItem>,
                             "-- Select Category --",
                             new { @class = "form-control", @id = "CategoryId" })
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
            </div>



            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-4 col-form-label text-white">Brand Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Enter Brand Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            

            <div class="row">
                <div class="offset-sm-4 col-sm-8 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-plus-circle-fill me-1"></i>Create
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
