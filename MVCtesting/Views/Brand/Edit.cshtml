@model MVCtesting.Models.BrandCreateViewModel

@{
    ViewData["Title"] = "Edit Brand";
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-4 shadow" style="background-color: #121212; border-color: #444">
        <h2 class="text-center mb-4 text-white">Edit Brand</h2>

        <form asp-action="Edit" method="post" novalidate>
            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="Name" class="col-sm-4 col-form-label text-white">Brand Name</label>
                <div class="col-sm-8">
                    <input asp-for="Name" class="form-control bg-dark text-white border-secondary" placeholder="Enter Brand Name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label for="SelectedCategoryIds" class="col-sm-4 col-form-label text-white">Select Categories</label>
                <div class="col-sm-8">
                    <select asp-for="SelectedCategoryIds" asp-items="Model.CategoriesSelectList" multiple class="form-control bg-dark text-white border-secondary">
                    </select>
                    <span asp-validation-for="SelectedCategoryIds" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-8 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-up-circle-fill me-1"></i>Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back to List
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
