@model MVCtesting.Models.ApplicationSetting

@{
    ViewData["Title"] = "Application Settings";
}

<div class="row">
    <div class="col-md-6 mx-auto rounded border p-4 shadow" style="background-color: #121212; border-color: #444">
        <h2 class="text-center mb-4 text-white">Application Settings</h2>

        <form asp-action="Index" method="post" novalidate>
            <input asp-for="Id" type="hidden" />

            <div class="row mb-3">
                <label asp-for="SiteName" class="col-sm-4 col-form-label text-white">Site Name</label>
                <div class="col-sm-8">
                    <input asp-for="SiteName" class="form-control bg-dark text-white border-secondary" placeholder="Enter Site Name" />
                    <span asp-validation-for="SiteName" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="SupportEmail" class="col-sm-4 col-form-label text-white">Support Email</label>
                <div class="col-sm-8">
                    <input asp-for="SupportEmail" class="form-control bg-dark text-white border-secondary" placeholder="Enter Support Email" />
                    <span asp-validation-for="SupportEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="AdministratorEmail" class="col-sm-4 col-form-label text-white">Administrator Email</label>
                <div class="col-sm-8">
                    <input asp-for="AdministratorEmail" class="form-control bg-dark text-white border-secondary" placeholder="Enter Admin Email" />
                    <span asp-validation-for="AdministratorEmail" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <label asp-for="IsMaintenanceMode" class="col-sm-4 col-form-label text-white">Maintenance Mode</label>
                <div class="col-sm-8 d-flex align-items-center">
                    <input asp-for="IsMaintenanceMode" class="form-check-input me-2" />
                    <span asp-validation-for="IsMaintenanceMode" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="offset-sm-4 col-sm-8 d-flex gap-2">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-arrow-up-circle-fill me-1"></i>Save
                    </button>
                    <a asp-action="Index" asp-controller="Dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle me-1"></i>Back
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
